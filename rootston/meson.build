sources = [
	'config.c',
	'cursor.c',
	'desktop.c',
	'ini.c',
	'input.c',
	'interpreter.c',	
	'keyboard.c',
	'layer_shell.c',
	'main.c',
	'output.c',
	'seat.c',
	'text_input.c',
	'virtual_keyboard.c',
	'wl_shell.c',
	'xdg_shell.c',
	'xdg_shell_v6.c',
]

if conf_data.get('WLR_HAS_XWAYLAND', 0) == 1
	sources += 'xwayland.c'
endif

lua            = dependency('lua')

executable(
	'rootston',
	sources,
	dependencies: [wlroots, wlr_protos, pixman, lua],
	build_by_default: get_option('rootston'),
)
